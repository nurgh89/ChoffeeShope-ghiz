<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/laylogin"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_animation"
        android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/laypertama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_centerInParent="true">

                <ImageView
                        android:id="@+id/logoimg_view"
                        android:layout_width="150dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/coffeshop_transparent"
                        android:layout_centerHorizontal="true"
                        android:layout_height="150dp"/>
                <RelativeLayout
                        android:id="@+id/laykedua"
                        android:layout_below="@+id/logoimg_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        
                        <TextView
                                android:id="@+id/txt_login"
                                android:text="Sign In"
                                android:textColor="#3b2f29"
                                android:textStyle="bold"
                                android:textSize="30dp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:id="@+id/layketiga"
                                android:layout_below="@+id/txt_login"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                        android:id="@+id/laykeempat"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="15dp"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">

                                <TextView
                                        android:id="@+id/txt_username"
                                        android:layout_width="wrap_content"
                                        android:textSize="15dp"
                                        android:text="e-mail"
                                        android:textStyle="bold"
                                        android:textColor="#3b2f29"
                                        android:textColorHint="@color/colortransparent"
                                        android:textAllCaps="true"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_height="wrap_content"/>
                                    <EditText
                                            android:id="@+id/edt_user"
                                            android:layout_width="match_parent"
                                            android:background="@drawable/et_bg"
                                            android:fontFamily="sans-serif-medium"
                                            android:inputType="textEmailAddress"
                                            android:paddingLeft="15dp"
                                            android:paddingRight="15dp"
                                            android:textColor="#3b2f29"
                                            android:textSize="15sp"
                                            android:layout_height="40dp"/>


                                </LinearLayout>

                        </LinearLayout>
                            <LinearLayout
                                android:id="@+id/laykelima"
                                android:layout_below="@+id/layketiga"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                        android:id="@+id/laykeenam"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">

                                        <TextView
                                                android:id="@+id/txt_password"
                                                android:layout_width="wrap_content"
                                                android:textSize="15dp"
                                                android:text="password"
                                                android:layout_marginTop="15dp"
                                                android:textStyle="bold"
                                                android:textColor="#3b2f29"
                                                android:textColorHint="@color/colortransparent"
                                                android:textAllCaps="true"
                                                android:fontFamily="sans-serif-medium"
                                                android:layout_height="wrap_content"/>
                                        <EditText
                                                android:id="@+id/edt_pass"
                                                android:layout_width="match_parent"
                                                android:background="@drawable/et_bg"
                                                android:fontFamily="sans-serif-medium"
                                                android:inputType="textPassword"
                                                android:paddingLeft="15dp"
                                                android:paddingRight="15dp"
                                                android:textColor="#3b2f29"
                                                android:textSize="15sp"
                                                android:layout_height="40dp"/>


                                </LinearLayout>

                        </LinearLayout>
                        
                        <Button
                                android:id="@+id/btn_login"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/laykelima"
                                android:layout_marginTop="50dp"
                                android:background="@drawable/around_button"
                                android:paddingLeft="70dp"
                                android:paddingRight="70dp"
                                android:layout_centerHorizontal="true"
                                android:text="Login now"
                                android:textAllCaps="false"
                                android:textColor="#3b2f29"
                                android:layout_height="wrap_content"/>

                </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/layketuju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <Button
                        android:id="@+id/btnatas"
                        android:layout_width="wrap_content"
                        android:background="@color/colortransparent"
                        android:text="Sign Up"
                        android:textAllCaps="true"
                        android:textColor="#3b2f29"
                        android:fontFamily="sans-serif-medium"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btnbawah"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/colortransparent"
                        android:text="Forgot Password"
                        android:textAllCaps="true"
                        android:textColor="#3b2f29"
                        android:fontFamily="sans-serif-medium"
                        android:layout_height="wrap_content"/>

        </RelativeLayout>


</RelativeLayout>